<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>resetConfirmTitle}"
        type="Message">
        <content>
            <Text text="{i18n>resetConfirmText}" />
        </content>
        <beginButton>
            <Button text="{i18n>btnResetChanges}" 
                press="onReset" />
        </beginButton>
        <endButton>
            <Button text="{i18n>btnCancel}" 
                press="onCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>